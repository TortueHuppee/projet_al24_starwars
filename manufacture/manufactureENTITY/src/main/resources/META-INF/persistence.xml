<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
	<persistence-unit name="manufactureENTITY">
	<provider>org.hibernate.ejb.HibernatePersistence</provider>
		<class>manufacture.entity.user.Address</class>
		<class>manufacture.entity.cart.Cart</class>
		<class>manufacture.entity.cart.CartProduct</class>  
		<class>manufacture.entity.product.Category</class>
		<class>manufacture.entity.user.City</class>
		<class>manufacture.entity.user.Civility</class>
		<class>manufacture.entity.product.Color</class>
		<class>manufacture.entity.product.Constructor</class>
		<class>manufacture.entity.user.Country</class>
		<class>manufacture.entity.cart.Delivery</class>
		<class>manufacture.entity.product.Material</class>
		<class>manufacture.entity.cart.PaymentType</class>
		<class>manufacture.entity.user.Planet</class>
		<class>manufacture.entity.product.Product</class>
		<class>manufacture.entity.product.ConstructorProduct</class>
		<class>manufacture.entity.product.ArtisanProduct</class>
		<class>manufacture.entity.product.UsedProduct</class>
		<class>manufacture.entity.product.ProductRef</class>
		<class>manufacture.entity.product.Rating</class>
		<class>manufacture.entity.report.Reporting</class>
		<class>manufacture.entity.report.ReportingDecision</class>
		<class>manufacture.entity.product.SpaceshipProduct</class>
		<class>manufacture.entity.product.SpaceshipRef</class>
		<class>manufacture.entity.user.User</class>
		<class>manufacture.entity.user.Administrator</class>
		<class>manufacture.entity.user.Artisan</class>
		<class>manufacture.entity.user.SpecificCustomer</class>
		<class>manufacture.entity.user.ProfessionnalCustomer</class>
		
		<properties>  
			<property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
			<property name="javax.persistence.jdbc.url" value="jdbc:mysql://127.0.0.1:3306/manufacture"/>
			<property name="javax.persistence.jdbc.user" value="root"/> 
			<property name="javax.persistence.jdbc.password" value=""/> 
			<property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect"/>
			<property name="hibernate.hbm2ddl.auto" value="create"/>
			<property name="hibernate.show_sql" value="true"/> 
		</properties>

	</persistence-unit>
</persistence>
